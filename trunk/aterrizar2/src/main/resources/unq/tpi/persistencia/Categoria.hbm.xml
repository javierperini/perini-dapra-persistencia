<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="unq.tpi.persistencia.Categoria" table="Categoria" >
        <id name="id" type="java.lang.Integer">
            <column name="idCategoria" />
            <generator class="identity" />
        </id>

        <property name="nombre" type="string">
            <column name="nombre" length="20" not-null="true" unique="false" />
        </property>
        
        <property name="precio" type="java.lang.Integer">
            <column name="precio" length="20" not-null="true" unique="false" />
        </property>
        
        
                
    </class>
</hibernate-mapping>