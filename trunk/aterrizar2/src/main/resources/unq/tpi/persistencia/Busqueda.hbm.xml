<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="unq.tpi.persistencia.busquedas.Busqueda" table="Busqueda" >
        <id name="id" type="java.lang.Integer">
            <column name="idBusqueda" />
            <generator class="identity" />
        </id>
        
        <bag name="criteriosDeBusqueda" cascade="all-delete-orphan" inverse="false"> 
            <key column="criterios" />
            <one-to-many class="unq.tpi.persistencia.busquedas.CriterioDeBusqueda" /> 
        </bag>  
                        
    </class>
</hibernate-mapping>