<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="unq.tpi.persistencia.busquedas.Criterio" table="Criterio">
		<id name="id" type="java.lang.Integer">
			<column name="idCriterio" />
			<generator class="identity" />
		</id>

		<discriminator column="type" type="string"></discriminator>

		<property name="criterio" type="string">
			<column name="criterio" length="255" not-null="true" unique="false" />
		</property>

		<bag name="criteriosComplementarios" cascade="all-delete-orphan">
			<key column="criterio_complementarios" />
			<many-to-many entity-name="unq.tpi.persistencia.busquedas.Criterio">
				<column name="criterios" />
			</many-to-many>
		</bag>


		<subclass name="unq.tpi.persistencia.busquedas.CriterioBusqueda"
			discriminator-value="busqueda">
		</subclass>

		<subclass name="unq.tpi.persistencia.busquedas.CriterioDeOrden"
			discriminator-value="orden">
		</subclass>

	</class>
</hibernate-mapping>