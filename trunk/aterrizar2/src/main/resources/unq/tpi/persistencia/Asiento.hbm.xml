<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="unq.tpi.persistencia.Asiento" table="Asiento" >
        <id name="id" type="java.lang.Integer">
            <column name="idAsiento" />
            <generator class="identity" />
        </id>

        <property name="precioPorCategoria" type="java.lang.Integer">
            <column name="precioDeCategoria" length="20" not-null="true" unique="false" />
        </property>
        
        <property name="reservadoPor" type="java.lang.Integer">
            <column name="idUsuario" length="20" not-null="true" unique="false" />
        </property>
        
        <property name="estaReservado" type="java.lang.Boolean">
            <column name="reservado" length="1" not-null="true" unique="false" />
        </property>
        
    </class>
</hibernate-mapping>