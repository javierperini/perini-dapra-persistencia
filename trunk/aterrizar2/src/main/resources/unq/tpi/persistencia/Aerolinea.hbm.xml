<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="unq.tpi.persistencia.Aerolinea" table="AEROLINEA" >
        <id name="id" type="java.lang.Integer">
            <column name="A_ID" />
            <generator class="identity" />
        </id>

        <property name="nombre" type="string">
            <column name="A_NOMBRE" length="20" not-null="true" unique="false" />
        </property>
        
        <list name="unosVuelos" cascade="all-delete-orphan"> 
            <key column="A_ID" /> 
            <index column="ORDEN" /> 
            <one-to-many class="unq.tpi.persistencia.Vuelo" /> 
        </list>  
        
        <many-to-one name="empresaALaQuePertenece" column="E_ID"  />
                
    </class>
</hibernate-mapping>