<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="unq.tpi.persistencia.busquedas.Busqueda" table="Busqueda" >
        <id name="id" type="java.lang.Integer">
            <column name="idBusqueda" />
            <generator class="identity" />
        </id>
        
        <many-to-one name="criterioDeBusqueda"  cascade="all"/> 
        <many-to-one name="criterioDeOrden" cascade="all" /> 
        
        <many-to-one name="usuario" column="usuario" cascade="all"  />
                                
    </class>
</hibernate-mapping>