<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="unq.tpi.persistencia.Empresa" table="Empresa" >
        <id name="id" type="java.lang.Integer">
            <column name="E_ID" />
            <generator class="identity" />
        </id>

        <property name="nombre" type="string">
            <column name="E_NOMBRE" length="20" not-null="true" unique="false" />
        </property>
        
        <bag name="unasAerolineas" cascade="all-delete-orphan"> 
            <key column="idEmpresa" /> 
            <one-to-many class="unq.tpi.persistencia.Aerolinea" /> 
        </bag>  
		
    </class>
</hibernate-mapping>